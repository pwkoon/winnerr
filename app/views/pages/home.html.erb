<section class="intro">
  <div class="bg-image vh-100" style="background-color: #EFD3E4;
          background-image: url(https://images.unsplash.com/photo-1644035655432-754ba37f06e7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80);
        ">
    <div class="d-flex align-items-center h-100">
      <div class="container">
        <p class="display-5 font-weight-bold mb-5 text-white">Find the perfect <strong>freelance</strong> services for your business</p>
        <div class="card-body">
          <div class="row justify-content-center">
            <div class="col-md-6 mb-3 mb-md-0">
              <div id="basic" class="form-outline">
                <input type="text" id="form1" class="form-control form-control-lg" />
                <% @categories.first(5).each do |category| %>
                <a type="button" class="btn btn-success fw-bold" href= <%= "/categories/#{category.id}" %> data-mdb-ripple-color="dark"><%= category.name %></a>
                <% end %>
                <label class="form-label text-white opacity-75" for="form1">I'm looking for web designer..</label>
              </div>
            </div>
              <%# <div class="col-md-4 mb-3 mb-md-0">
                <div id="location" class="form-outline">
                  <input type="text" id="form2" class="form-control form-control-lg" />
                  <label class="form-label" for="form2">Location</label>
                </div>
              </div> %>
            <div class="col-md-2">
              <input class="btn btn-secondary btn-block btn-lg" type="submit" value="Search" />
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>

<div class="container">
  <br>
  <div class="d-flex justify-content-between align-items-center">
  <h2 class="fw-bold" style="font-family: Anton">Winnerr's categories</h2>
  <a class="btn btn-gradient" href="/listings/new">New Listing</a>
  </div>
  <hr>
  <div class="cards">
    <% @categories.each do |category| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/436413/pexels-photo-436413.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1)">
        <a class="text-white text-decoration-none" href= <%= category_path(category) %>><%= category.name %></a>
      </div>
    <% end %>
  </div>
</div>
